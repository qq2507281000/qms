    </update>

    <delete id="deleteTShopCoursesById" parameterType="String">
        delete from t_shop_courses where id = #{id}
    </delete>

    <delete id="deleteTShopCoursesByIds" parameterType="String">
        update t_shop_courses
        <trim prefix="SET" suffixOverrides=",">
            flag = 1
        </trim>
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getCoursesDetail" parameterType="String" resultMap="TShopCoursesModelResult">
        SELECT
            tsc.title,
            tscp.price,
            ts.address,
            ts.business_region,
            ts.location_region,
            ts.telephone,
            ts.cover_img,
            ts.mobile,
            ts.`name` AS shopName,
            ts.summary,
            tsc.content_html,
            tsc.id,
            tsc.shop_id,
            tsc.category_id
        FROM
            t_shop_courses tsc
            INNER JOIN t_shop ts ON tsc.shop_id = ts.id
            INNER JOIN t_shop_courses_price tscp ON tsc.id = tscp.courses_id
        WHERE
            tsc.id = #{id}
            AND tsc.flag = 0
    </select>

    <select id="getSuggestCourses"  resultMap="TShopCoursesModelResult" parameterType="TShopCoursesModel">
        SELECT
            tsc.id,
            ts.`name`,
            tscp.price,
            tsc.title,
            tsc.suggest
        FROM
            t_shop_courses tsc
            INNER JOIN t_shop ts ON tsc.shop_id = ts.id
            INNER JOIN t_shop_courses_price tscp ON tsc.id = tscp.courses_id
        <where>
            <if test="shopId != null  and shopId != ''"> and tsc.shop_id = #{shopId}</if>
            <if test="categoryId != null  and categoryId != ''"> and tsc.category_id = #{categoryId}</if>
            <if test="address != null and address != ''">and ts.address like concat('%', #{address}, '%')</if>
            AND tsc.flag = 0 and tsc.suggest = 0
        </where>
    </select>

    <select id="getNameShopCourses" parameterType="String" resultMap="TShopCoursesModelResult">
        SELECT
            tsc.title,
            tscp.price,
            ts.address,
            ts.telephone,
            ts.mobile,
            ts.`name` AS shopName,
            ts.summary,
            tsc.content_html,
            tsc.id,
            tsc.shop_id
        FROM
            t_shop_courses tsc
            INNER JOIN t_shop ts ON tsc.shop_id = ts.id
            INNER JOIN t_shop_courses_price tscp ON tsc.id = tscp.courses_id
        WHERE
            tsc.title like concat('%', #{title}, '%')
            AND tsc.flag = 0
    </select>

    <select id="getShopCategoryCourses"  resultMap="TShopCoursesModelResult" parameterType="TShopCoursesModel">
        SELECT
        tsc.id,
        ts.`name`,
        tscp.price,
        tsc.title,
        tsc.suggest,
        tsc.shop_id,
        tsc.category_id
        FROM
        t_shop_courses tsc
        INNER JOIN t_shop ts ON tsc.shop_id = ts.id
        INNER JOIN t_shop_courses_price tscp ON tsc.id = tscp.courses_id
        <where>
            <if test="shopId != null  and shopId != ''"> and tsc.shop_id = #{shopId}</if>
            <if test="categoryId != null  and categoryId != ''"> and tsc.category_id = #{categoryId}</if>
            AND tsc.flag = 0
        </where>
    </select>

    <select id="getAllCoursesCategory"  resultMap="TShopCoursesModelResult" parameterType="TShopCoursesModel">
        SELECT
        DISTINCT ca.`name`,
        co.shop_id,
        co.category_id,
        ca.id
        FROM
        t_shop_courses co
        LEFT JOIN t_category ca ON co.category_id = ca.parent_id
        <where>
            <if test="shopId != null  and shopId != ''"> and co.shop_id = #{shopId}</if>
            AND co.flag = 0
        </where>
    </select>

    <select id="getMaxSortKeyCourses"  resultMap="TShopCoursesModelResult" parameterType="TShopCoursesModel">
        select
            tsc.id,
            ts.`name`,
            tscp.price,
            tsc.title,
            tsc.suggest,
            tsc.shop_id,
            tsc.category_id,
            tsc.sort_key
        from
            t_shop_courses tsc
        inner join t_shop ts on tsc.shop_id = ts.id
        inner join t_shop_courses_price tscp on tsc.id = tscp.courses_id
        where
            tsc.flag = 0 and tsc.suggest = 0
        order by tsc.sort_key
        limit 1
    </select>
