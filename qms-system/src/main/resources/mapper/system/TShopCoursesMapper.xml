    <update id="updateTShopCourses" parameterType="TShopCourses">
        update t_shop_courses
        <trim prefix="SET" suffixOverrides=",">
            <if test="shopId != null  and shopId != ''">shop_id = #{shopId},</if>
            <if test="title != null  and title != ''">title = #{title},</if>
